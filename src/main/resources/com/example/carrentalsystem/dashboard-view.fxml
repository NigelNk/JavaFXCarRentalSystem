                        <Font size="25.0" />
                    </font>
                 </Label>
<!--                 cars available -->
                 <Label fx:id="carsAvailabilty" style="-fx-font-size: 40px; -fx-font-weight: bold; -fx-text-fill: #2196F3;">
                    <font>
                        <Font size="25.0" />
                    </font>
                 </Label>
             </VBox>
<!--             count Customers -->
             <VBox layoutX="967.0" layoutY="83.0" prefHeight="80" prefWidth="310.0" spacing="5" style="-fx-background-color: #ffffff; -fx-padding: 12; -fx-background-radius: 12; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 6, 0.4, 0, 1);">
                 <Label style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #444444;" text="Customers">
                    <font>
                        <Font size="25.0" />
                    </font>
                 </Label>
                 <Label fx:id="customersAvailable" style="-fx-font-size: 40px; -fx-font-weight: bold; -fx-text-fill: #2196F3;">
                    <font>
                        <Font size="25.0" />
                    </font>
                 </Label>
             </VBox>
            <Label layoutX="319.0" layoutY="273.0" style="-fx-font-size: 20px; -fx-text-fill: #2c3e50;" text="Quick Overview of Available Cars">
               <graphic>
                   <ImageView>
                       <Image url="@icons/cars.png" />
                   </ImageView>
               </graphic>
               <font>
                  <Font size="24.0" />
               </font>
            </Label>
             <AnchorPane layoutX="248.0" layoutY="314.0" prefHeight="80.0" prefWidth="1183.0" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 20;">
                 <FlowPane fx:id="vehiclesContainer" alignment="TOP_CENTER" hgap="20" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 20;" vgap="20" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />
