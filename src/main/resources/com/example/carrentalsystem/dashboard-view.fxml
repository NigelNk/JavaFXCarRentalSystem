<BorderPane style="-fx-background-color: #ecf0f1;" stylesheets="@style.css" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.carrentalsystem.HelloController">

    <left>
