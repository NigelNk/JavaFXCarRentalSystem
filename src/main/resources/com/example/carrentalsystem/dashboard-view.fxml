         <AnchorPane id="rootPane" prefHeight="878.0" prefWidth="1326.0" StackPane.alignment="CENTER">

             <Label style="-fx-font-size: 20px; -fx-text-fill: #2c3e50;" text="Dashboard">
                 <graphic>
                     <ImageView>
                         <Image url="@icons/dashboard.png" />
                     </ImageView>
                 </graphic>
                 <font>
                     <Font size="24.0" />
                 </font>
             </Label>

            <VBox layoutX="262.0" layoutY="83.0" prefHeight="80" prefWidth="310.0" spacing="5" style="-fx-background-color: #ffffff; -fx-padding: 12; -fx-background-radius: 12; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 6, 0.4, 0, 1);">
                <Label style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #444444;" text="Rented Vehicles">
