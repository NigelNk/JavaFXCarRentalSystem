                <graphic>
                    <ImageView fitHeight="40" fitWidth="40">
                        <Image url="@icons/bg.png" />
                    </ImageView>
                </graphic>
            </Label>

            <Separator style="-fx-background-color: #7f8c8d;" />
         <Button contentDisplay="TOP" layoutX="35.0" layoutY="118.0" maxWidth="Infinity" onAction="#addVehicle" prefHeight="128.0" prefWidth="279.0" styleClass="sidebar-btn" text="Add Vehicle">
            <font>
               <Font name="DejaVu Sans Bold" size="24.0" />
            </font>
            <graphic>
                <ImageView>
                    <Image url="@icons/add-car.png" />
                </ImageView>
            </graphic>
         </Button>
            <Button contentDisplay="TOP" layoutX="35.0" layoutY="396.0" maxWidth="Infinity" onAction="#viewVehicles" prefHeight="145.0" prefWidth="190.0" styleClass="sidebar-btn" text="View Vehicles">
               <font>
                  <Font name="DejaVu Sans Bold" size="24.0" />
               </font>
               <graphic>
                  <ImageView>
                     <image>
                        <Image url="@icons/car.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>
            <Button contentDisplay="TOP" maxWidth="Infinity" onAction="#rentedVehicle" prefHeight="145.0" prefWidth="190.0" styleClass="sidebar-btn" text="View Rented Vehicles">
            <font>
               <Font name="DejaVu Sans Bold" size="24.0" />
            </font>

                <graphic>
                    <ImageView>
                        <Image url="@icons/rented.png" />
                    </ImageView>
                </graphic>

            </Button>
            <Button contentDisplay="TOP" maxWidth="Infinity" onAction="#addCustomer" prefHeight="86.0" prefWidth="170.0" styleClass="sidebar-btn" text="Add Customer">
            <font>
               <Font name="DejaVu Sans Bold" size="24.0" />
            </font>
                <graphic>
                    <ImageView>
                        <Image url="@icons/customer.png" />
                    </ImageView>
                </graphic>
            </Button>
            <Button contentDisplay="TOP" maxWidth="Infinity" onAction="#customerView" prefHeight="106.0" prefWidth="170.0" styleClass="sidebar-btn" text="View Customers">
            <font>
               <Font name="DejaVu Sans Bold" size="24.0" />
            </font>
                <graphic>
                    <ImageView>
                        <Image url="@icons/customers.png" />
                    </ImageView>
                </graphic>
            </Button>
         <Button contentDisplay="TOP" layoutX="35.0" layoutY="441.0" maxWidth="Infinity" onAction="#rent" prefHeight="86.0" prefWidth="170.0" styleClass="sidebar-btn" text="Rent">
            <font>
               <Font name="DejaVu Sans Bold" size="24.0" />
            </font>
            <graphic>
               <ImageView>
                     <Image url="@icons/car-rental.png" />
               </ImageView>
            </graphic>
         </Button>
            <VBox.vgrow>

            </VBox.vgrow>
        </VBox>
        </ScrollPane>
