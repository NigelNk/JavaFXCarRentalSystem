<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="798.0" prefWidth="930.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.carrentalsystem.RentController">
   <children>
      <AnchorPane layoutX="-1.0" layoutY="-5.0" prefHeight="798.0" prefWidth="930.0">
         <children>
            <Label layoutX="9.0" layoutY="14.0" style="-fx-font-size: 20px; -fx-text-fill: #2c3e50;" text="Rent Vehicle Dashboard">
               <graphic>
                  <ImageView>
                     <image>
                        <Image url="@icons/dashboard.png" />
                     </image>
                  </ImageView>
               </graphic>
               <font>
                  <Font size="24.0" />
               </font>
            </Label>
            <ComboBox fx:id="customerComboBox" layoutX="415.0" layoutY="377.0" prefHeight="48.0" prefWidth="420.0" promptText="Rent To" styleClass="dropdown" />
            <ComboBox fx:id="vehicleComboBox" layoutX="415.0" layoutY="481.0" onAction="#setPicture" prefHeight="48.0" prefWidth="420.0" promptText="No vehicle choosen" styleClass="dropdown" />
            <DatePicker fx:id="endDatePicker" layoutX="415.0" layoutY="585.0" prefHeight="48.0" prefWidth="420.0" promptText="Choose Return Date" styleClass="dropdown" />
             <ImageView fx:id="vehicleImage" fitHeight="142.0" fitWidth="236.0" layoutX="590.0" layoutY="183.0" pickOnBounds="true" preserveRatio="true" styleClass="vehicle-image">
                 <Image url="@icons/car.png" />
             </ImageView>
            <Label layoutX="415.0" layoutY="347.0" text="Rent To:">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
            </Label>
            <Label layoutX="416.0" layoutY="443.0" text="Select a Vehicle:">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
            </Label>
            <Label layoutX="417.0" layoutY="555.0" text="Return Date">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
            </Label>
            <Button contentDisplay="RIGHT" layoutX="504.0" layoutY="676.0" mnemonicParsing="false" prefHeight="55.0" prefWidth="436.0" styleClass="save-btn" onAction="#handleAddRental" text="Rent">
               <graphic>
                  <ImageView>
                     <image>
                        <Image url="@icons/save.png" />
                     </image>
                  </ImageView>
               </graphic>
               <font>
                  <Font name="System Bold" size="26.0" />
               </font>
            </Button>
         </children>
      </AnchorPane>
   </children>
</AnchorPane>
